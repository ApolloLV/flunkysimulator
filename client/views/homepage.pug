doctype html
head
    title Flunkyballsimulator
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='css/bootstrap-theme.css' rel='stylesheet' type='text/css')
    link(href='css/bootstrap.css' rel='stylesheet' type='text/css')
    link(href='css/custom.css' rel='stylesheet' type='text/css')
    link(href='css/bootstrap-toggle.css' rel='stylesheet' type='text/css')
.container-fluid
    .row
        .col-md-6.col-md-push-3
            #mainvideobox
                image.logoposter(src='picture/logoposter.jpg')
                video.hit.video(src='' preload='auto') Getroffen!
                video.miss.video(src='') Nicht getroffen!
                video.nearmiss.video(src='') Nicht getroffen!
                video.setup.video(src='') Wird aufgebaut...
                video.stop.video(src='' preload='auto') Stop!
                image.hit.poster(src='picture/hit.png')
                image.miss.poster(src='picture/miss.png')
                image.nearmiss.poster(src='picture/nearmiss.png')
                image.setup.poster(src='picture/setup.png')
                image.stop.poster(src='picture/stop.png')
                image.throw.poster(src='picture/throw.png')
            input#playername.form-control(type="text" placeholder="Spielername")
            button#playernamebutton.btn.btn-default Registrieren
            .btn-group-horizontal
                button#softthrowbutton.btn.btn-default(disabled) Vorsichtig werfen
                button#mediumthrowbutton.btn.btn-default(disabled) Werfen
                button#hardthrowbutton.btn.btn-default(disabled) Kr√§ftig werfen
        .col-md-3.col-md-pull-6
            .statearea
                h3 Linkes Team
                #teamaarea
                h3 Zuschauer
                #spectatorarea
            button#resetbutton.btn.btn-danger Spiel neu starten
            input#lowbandwidthbutton(type="checkbox" checked data-toggle="toggle" data-on="Videomodus" data-off="Textmodus")
        .col-md-3
            .statearea
                h3 Rechtes Team
                #teambarea
            h3 Chat
            textarea#logbox.form-control(rows=10 disabled)
            input#chatinput.form-control(type="text" placeholder="Nachricht")
// Optional JavaScript
script(src='js/jquery-2.2.4.js' type='text/javascript')
script(src='js/bootstrap.min.js' type='text/javascript')
// Toggle button
script(src='js/bootstrap-toggle.js' type='text/javascript')
// Main client-side JavaScript
script(src='js/main.js' type='text/javascript')
